<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinLab.Pages.AddRolePage"
             Title="Add Role">

    <ContentPage.Content>
        <StackLayout>
            <BoxView x:Name="RoleColorBox" VerticalOptions="Start" />
            <Button Text="Choose role color" Clicked="ChooseColor_Clicked"></Button>

            <Entry x:Name="NameEntry" Placeholder="Role name"/>
            <Picker x:Name="Picker" SelectedIndexChanged="Picker_OnSelectedIndexChangedicker_SelectedIndexChanged" Title="Choose Access Level">
                <Picker.Items>
                    <x:String>Read Only</x:String>
                    <x:String>Can Create Tasks</x:String>
                    <x:String>Can Create and Close Tasks</x:String>
                    <x:String>Can Create Roles</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>